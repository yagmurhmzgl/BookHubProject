@model AddHikayeViwModel
@{
    ViewData["Title"] = "AddHikaye";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <label>Hikaye Adı</label>
    <input type="text" asp-for="Name" class="form-control"/>
    <br />
    <label>Description</label>
    <input type="text" asp-for="Description" class="form-control"/>
    <label>KikayeCoverImage</label>
    <input type="image" asp-for="HikayeCoverImage" class="form-control" />
    <label>Kategori</label>
    <input type="text" asp-for="KategoriAdi" class="form-control" />
    <label>YazarAdi</label>
    <input type="text" asp-for="YazarAdi" class="form-control"/>
    <label>Yazar Soyadı</label>
    <input type="text" asp-for="YazarSoyadi" class="form-control" />
    <button class="btn btn-primary">Hikayeyi Ekle</button>
</form>

